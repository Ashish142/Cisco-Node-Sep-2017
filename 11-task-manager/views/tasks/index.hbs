<h1>Task Manager</h1>
<hr>
<h3>Tasks</h3>
<a href="/tasks/new">Create New...</a>
<div class="stats">
	<span class="completed">{{completedCount}}</span>
	<span> / </span>
	<span>{{list.length}}</span>
</div>
<ol id="taskList">
	{{#each list}}
		<li>
			{{#if this.isCompleted}}
				<span class="taskName completed">{{this.name}}</span>
			{{else}}
				<span class="taskName">{{this.name}}</span>
			{{/if}}
			<a href="/tasks/toggle/{{this.id}}">X</a>
		</li>
	{{/each}}
	
</ol>
<form action="/tasks/remove" method="post">
	<input type="submit" value="Remove Completed">
</form>